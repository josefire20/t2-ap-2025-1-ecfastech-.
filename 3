while True:
    nome = input("Digite o nome: ")
    if len(nome) <= 3:
        print("O nome deve ter mais de 3 caracteres.")
        continue

    idade = int(input("Digite a idade: "))
    if idade < 0 or idade > 150:
        print("Idade inválida.")
        continue

    salario = float(input("Digite o salário: "))
    if salario <= 0:
        print("Salário deve ser maior que zero.")
        continue

    sexo = input("Digite o sexo (f/m): ").lower()
    if sexo not in ['f', 'm']:
        print("Sexo inválido.")
        continue

    estado_civil = input("Digite o estado civil (s/c/v/d): ").lower()
    if estado_civil not in ['s', 'c', 'v', 'd']:
        print("Estado civil inválido.")
        continue

    print("Informações válidas!")
    break
